{
  "name": "chances-party",
  "version": "0.0.1",
  "private": true,
  "description": "A party web app for Chance Snow's parties",
  "scripts": {
    "start": "node ./bin/www",
    "postinstall": "bash deploy.sh",
    "debug": "NODE_ENV=development DEBUG=party:* node ./bin/www",
    "clean": "rm -rf ./build && mkdir ./build",
    "build": "npm run clean && npm run build:js",
    "build:js": "babel ./ -d ./build --ignore node_modules,build --presets es2015-node6,stage-2 -s",
    "watch": "nodemon --watch build --watch views --exec 'npm run build:js && npm run debug'",
    "lint": "semistandard --verbose | snazzy",
    "test": "semistandard | snazzy && mocha --check-leaks --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chances/chances-party.git"
  },
  "engines": {
    "node": "6.2.2"
  },
  "author": "Chance Snow <git@chancesnow.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chances/chances-party/issues"
  },
  "homepage": "http://chancesnow.me/party",
  "dependencies": {
    "body-parser": "~1.13.2",
    "connect-sqlite3": "^0.9.8",
    "debug": "~2.2.0",
    "ejs": "~2.3.3",
    "express": "~4.13.1",
    "express-session": "^1.13.0",
    "morgan": "~1.6.1",
    "passport": "^0.3.2",
    "passport-spotify": "^0.3.0",
    "sequelize": "^3.19.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015-node6": "^0.2.0",
    "babel-preset-stage-2": "^6.11.0",
    "chai": "^3.5.0",
    "dotenv": "^2.0.0",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "semistandard": "^7.0.5",
    "sinon": "^1.17.4",
    "snazzy": "^2.0.1"
  }
}
